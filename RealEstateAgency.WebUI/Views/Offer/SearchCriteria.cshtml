@model RealEstateAgency.WebUI.Models.SearchCriteria
@using RealEstateAgency.Domain.Setup

<!-- search criteria -->
<div class="coll-md-2 coll-lg-2">aa</div>
<div class="col-md-5 coll-lg-5">
    @*<a href="~/Views/Offer/List.cshtml">~/Views/Offer/List.cshtml</a>*@
    <div class="container-fluid">
        <form class="form-horizontal" asp-controller="Offer" asp-action="List">
            <fieldset>
                <!-- Form Name -->
                @*<legend style="text-align:center">Wyszukiwanie nieruchomości</legend>*@
                @RealEstateHelpers.MakeDropDown("Rodzaj nieruchomości:", Setups.GetInstance().CATEGORIES, "category", "category", @Model.category)
                @RealEstateHelpers.MakeTextEditBetweenForDecimals("Cena:", "price_min", "price_min", "np. 80000", "price_max", "price_max", "np. 200000", @Model.price_min, @Model.price_max)
                @RealEstateHelpers.MakeTextEdit("Miejscowość", "np. Rzeszów", "location", "location")
                <div id="search_criteria">
                    <!--   MIESZKANIE -->
                    <div id="mieszkanie">
                        @RealEstateHelpers.MakeDropDown("Rodzaj oferty:", Setups.GetInstance().OFFER_TYPES, "m_offer_type", "m_offer_type", @Model.m_offer_type)
                        @RealEstateHelpers.MakeDropDown("Rynek:", Setups.GetInstance().MARKETS, "m_market", "m_market", @Model.m_market)                        
                        @RealEstateHelpers.MakeTextEditBetweenForDecimals("Powierychnia w m2:", "m_area_min", "m_area_min", "np. 40", "m_area_max", "m_area_max", "np. 120",@Model.m_area_min, @Model.m_area_max)
                        @RealEstateHelpers.MakeTextEditBetweenForInts("Liczba pokoi:", "m_rooms_min", "m_rooms_min", "np. 2", "m_rooms_max", "m_rooms_max", "np. 4", @Model.m_rooms_min, @Model.m_rooms_max)

                    </div> <!-- end od MIESZKANIE -->

                    <div id="dom">
                        @RealEstateHelpers.MakeDropDown("Rodzaj oferty:", Setups.GetInstance().OFFER_TYPES, "d_offer_type", "d_offer_type", @Model.d_offer_type)
                        @RealEstateHelpers.MakeDropDown("Rynek:", Setups.GetInstance().MARKETS, "d_market", "d_market", @Model.d_market)
                        @RealEstateHelpers.MakeTextEditBetweenForDecimals("Powierychnia w m2:", "d_area_min", "d_area_min", "np. 40", "d_area_max", "d_area_max", "np. 120", @Model.d_area_min, @Model.d_area_max)
                        @RealEstateHelpers.MakeTextEditBetweenForInts("Liczba pokoi:", "d_rooms_min", "d_rooms_min", "np. 2", "d_rooms_max", "d_rooms_max", "np. 4", @Model.d_rooms_min, @Model.d_rooms_max)

                    </div><!-- end of DOM -->
                    <!-- DZIALKA -->
                    <div id="dzialka">
                        @RealEstateHelpers.MakeDropDown("Rodzaj oferty:", Setups.GetInstance().OFFER_TYPES, "n_offer_type", "n_offer_type", @Model.n_offer_type)
                        @RealEstateHelpers.MakeTextEditBetweenForDecimals("Powierychnia w m2:", "n_area_min", "n_area_min", "np. 40", "n_area_max", "n_area_max", "np. 120", @Model.n_area_min, @Model.n_area_max)
                        @RealEstateHelpers.MakeDropDown("Rodzaj działki:", Setups.GetInstance().PARCEL_TYPES, "n_parcel_type", "n_parcel_type", @Model.n_parcel_type)

                    </div><!-- end of DZIALKA -->
                    <!-- GARAZ-->
                    <div id="garaz">
                        @RealEstateHelpers.MakeDropDown("Rodzaj oferty:", Setups.GetInstance().OFFER_TYPES, "g_offer_type", "g_offer_type", @Model.g_offer_type)
                        @RealEstateHelpers.MakeTextEditBetweenForDecimals("Powierychnia w m2:", "g_area_min", "g_area_min", "np. 40", "g_area_max", "g_area_max", "np. 120", @Model.g_area_min, @Model.g_area_max)
                        @RealEstateHelpers.MakeDropDown("Konstrukcja:", Setups.GetInstance().GARAGE_CONSTRUCTIONS, "g_garage_construction", "g_garage_construction", @Model.g_garage_construction)
                    </div><!-- end of GARAZ-->
                    <!-- LOKAL -->
                    <div id="lokal">
                        @RealEstateHelpers.MakeDropDown("Rodzaj oferty:", Setups.GetInstance().OFFER_TYPES, "l_offer_type", "l_offer_type", @Model.l_offer_type)
                        @RealEstateHelpers.MakeTextEditBetweenForDecimals("Powierychnia w m2:", "l_area_min", "l_area_min", "np. 40", "l_area_max", "l_area_max", "np. 120", @Model.l_area_min, @Model.l_area_max)
                        @RealEstateHelpers.MakeDropDown("Przeznaczenie:", Setups.GetInstance().LOCAL_PURPOSE, "l_local_purpose", "l_local_purpose", @Model.l_local_purpose)
                    </div><!-- end of GARAZ-->
                    <!-- POKOJ -->
                    <div id="pokoj">
                    </div><!-- end of POKOJ -->

                </div>
                @RealEstateHelpers.MakeDropDown("Pokaż oferty z:", new Dictionary<string, string> { { "0", "-" }, { "1", "ostatnich 24 godzin" }, { "2", "ostatnich 7 dni" }, { "3", "ostatniego miesiąca" }, { "4", "ostatnich 3 miesięcy" } }, "time", "time", Model.time)
                <button class="btn btn-lg btn-primary center-block" type="submit">Szukaj</button>
            </fieldset>

        </form>
    </div>

    <!-- end of search criteria -->
</div>

