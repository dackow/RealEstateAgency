@model RealEstateAgency.Domain.Entities.Offer

@using RealEstateAgency.Domain.Setup

@{
    ViewBag.Title = "MoreInfo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="width:90%">
    <div>
        <h4>Szczegóły oferty "<i><b>@Model.Name</b></i>" (id: @Model.Id) <div class="pull-right"><input type="button" class="btn btn-success" value='Cena: @(Model.Price.ToString("c"))' /></div></h4>
        <hr />
        <div class="well" style="background-color:darkgray">
            @Html.DisplayFor(model => model.Description)
        </div>

        <dl class="dl-horizontal">
           
            

            <dt>
                @Html.DisplayNameFor(model => model.Location):
            </dt>

            <dd >
                @{
                    string link = "https://www.google.pl/maps/place/";
                    string location = Model.Location.Replace(" ", "+");
                    link = link + location;
                }
                @Html.DisplayFor(model => model.Location)
                (<a href="#" onclick="window.open('@link')"> zobacz na mapie </a>)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Area):
            </dt>

            <dd >
                @Html.DisplayFor(model => model.Area)
            </dd>

            @if (Model.Category == "D" || Model.Category == "M")
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Rooms):
                </dt>

                <dd  >
                    @Html.DisplayFor(model => model.Rooms)
                </dd>
            }
            @if (Model.Category == "N")
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Parcel_Type):
                </dt>

                <dd  >
                    @Html.DisplayFor(model => model.Parcel_Type)
                </dd>
            }
            @if (Model.Category == "G")
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Garage_Construction):
                </dt>

                <dd  >
                    @Setups.GetNameForCode(Setups.GetInstance().GARAGE_CONSTRUCTIONS, Model.Garage_Construction)
                </dd>
            }

            @if (Model.Category == "L")
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Local_Purpose):
                </dt>

                <dd  >
                    @Setups.GetNameForCode(Setups.GetInstance().LOCAL_PURPOSE, Model.Local_Purpose)
                </dd>
            }

            <dt>
                @Html.DisplayNameFor(model => model.Entered_DT):
            </dt>

            <dd  >
                @Html.DisplayFor(model => model.Entered_DT)
            </dd>



    </dl>
</div>
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
    </div>