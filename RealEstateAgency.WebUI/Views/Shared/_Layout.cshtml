    <!-- displys selected value in drop down-->
    <script type="text/javascript">
        $(document).ready(function() {
            $('.dropdown-toggle').dropdown();
            $('.mydropdown li > a').click(function () {
                $('#text').text($(this).html());
            });

            function hideAll() {
                $("#mieszkanie").hide();
                $("#dom").hide();
                $("#dzialka").hide();
                $("#garaz").hide();
                $("#lokal").hide();
                $("#pokoj").hide();
            }

            function displayFirst() {
                $("#mieszkanie").show();
            }
            hideAll();
            displayFirst();
            
            $("#category").on("change", function () {
                hideAll();
                switch ($("#category option:selected").index())
                {
                    case 0:
                        $("#mieszkanie").show();
                        break;
                    case 1:
                        $("#dom").show();
                        break;
                    case 2:
                        $("#dzialka").show();
                        break;
                    case 3:
                        $("#garaz").show();
                        break;
                    case 4:
                        $("#lokal").show();
                        break;
                    case 5:
                        $("#pokoj").show();
                        break;
                }                
            });
        });

        
    </script>
