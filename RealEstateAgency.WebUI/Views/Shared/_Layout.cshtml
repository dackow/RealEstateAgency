        <div class="row" style="margin-top:10px;">
            <div class="col-md-6">
                <img src="~/Resources/logo_n1.png" />
            </div>
            <div class="col-md-6">
                <form class="navbar-form navbar-right" role="search">
                    <button type="button" class="btn btn-info">Kontakt: tel.: 502-304-426 e-mail: magdalena.dacko@gmail.com</button>
                </form>
            </div>
        </div>

        <div class="row">
            <nav class="navbar navbar-inverse navbar-custom" role="navigation" style="background-color:#28a4c9;color:white">
                @Html.Action("TopMenu", "Nav")
                <ul class="nav navbar-nav navbar-right" style="margin-right:30px">
                    <li>
                        <a href="#"><b>O nas...</b></a>
                    </li>

                </ul>
            </nav>
        </div>
    </div>

