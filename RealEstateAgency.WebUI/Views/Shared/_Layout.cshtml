@using RealEstateAgency.WebUI.Properties
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @Resources.APP_NAME_FULL</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/Social.css" rel="stylesheet" />
    
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>  
    <script src="~/Scripts/ReadEstate.js"></script>

    <!-- displys selected value in drop down-->
    <script type="text/javascript">
        $(document).ready(function() {
            $('.dropdown-toggle').dropdown();
            $('.mydropdown li > a').click(function () {
                $('#text').text($(this).html());
            });
        });
    </script>
</head>
<body>
    <div class="container">

        <div class="row" style="margin-top:10px;">
            <div class="col-md-6">
                <img src="~/Resources/logo_n1.png" />
            </div>
            <div class="col-md-6">
                <form class="navbar-form navbar-right" role="search">
                    <button type="button" class="btn btn-danger"><span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span> 502-304-426 <span class="glyphicon glyphicon-phone-alt" aria-hidden="true"></span> 509 808 144 <span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> magdalena.dacko@gmail.com</button>
                </form>
            </div>
        </div>

        <div class="row">
            <nav class="navbar btn-info" role="navigation">
                @Html.Action("TopMenu", "Nav")



                <ul class="nav navbar-nav navbar-right" style="margin-right:30px;color:#ffffff">
                    <li>
                        <a href="#" style="color:white"><b>O nas...</b></a>
                    </li>

                </ul>
            </nav>
        </div>
    </div>
    <!-- main content -->
        <div class="row panel">
            <div class="col-md-1"></div>
            <div id="search_criteria" class="col-md-3">
                @*@Html.Action("SearchCriteria", "Search")*@
                <form>
                    <div class="form-group">
                        <label for="category">Rodzaj nieruchomości:</label>

                        <ul class="nav nav-pills left">
                            <li class="dropdown active mydropdown">
                                <a class="dropdown-toggle" id="category" data-toggle="dropdown">
                                    <i class="icon icon-envelope icon-white"></i>
                                    <span id="text">Wybierz...</span><span class="caret"></span>
                                </a>
                                <ul ID="category" class="dropdown-menu">
                                    <li><a>Mieszkania</a></li>
                                    <li><a>Domy</a></li>
                                    <li><a>Działki</a></li>
                                </ul>
                            </li>
                        </ul>

                        @*<input type="email" class="form-control" id="email">*@
                    </div>
                    @*<div class="form-group">
                        <label for="pwd">Password:</label>
                        <input type="password" class="form-control" id="pwd">
                    </div>
                    <div class="checkbox">
                        <label><input type="checkbox"> Remember me</label>
                    </div>*@
                    <button type="submit" class="btn btn-default">Submit</button>
                </form>
            </div> 
            <!-- end of search_criteria -->
            <div class="col-md-7">
                @RenderBody()
            </div>
            <div class="col-md-1"></div>
        </div>   

    <!-- end of main content -->

    @*<div class="row panel">
        <div class="col-md-1"></div>
        <div class="col-md-10">
            @RenderBody()
        </div>
        <div class="col-md-1"></div>
    </div>*@


    <!-- footer with social icons -->
    <div class="container">
        <div class="row">

            <div class="navbar btn-info" style="padding-top:5px; padding-bottom:5px; color:#ffffff">
                <span class="text-center" style="padding-left:3px">Cztery Pokoje &copy;@DateTime.Now.Year. Wszystkie prawa zastrzeżone.</span>
                
                <ul class="social-icon animate pull-right">
                    <li><a href="#" title="facebook" target="_blank"><i class="fa fa-facebook"></i></a></li> <!-- change the link to social page and edit title-->
                    <li><a href="#" title="twitter" target="_blank"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#" title="google plus" target="_blank"><i class="fa fa-google-plus"></i></a></li>
                </ul>
